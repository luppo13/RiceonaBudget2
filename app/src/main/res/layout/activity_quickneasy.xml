<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="exosphere.alexandra.riceonabudget.Quickneasy"
    android:id="@+id/quickneasy"
    android:minHeight="@dimen/abc_config_prefDialogWidth"
    android:background="@drawable/another">

    <TextView android:text="Quick n&apos; Easy" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="40sp"
        android:layout_marginTop="29dp"
        android:textColor="#ff1b1b1b"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="143dp"
        android:layout_marginStart="143dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tuna Rice"
        android:id="@+id/tunaCheck"
        android:checked="false"
        android:textSize="30sp"
        android:typeface="serif"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chicken Rice"
        android:id="@+id/chickenCheck"
        android:checked="false"
        android:textSize="30sp"
        android:focusable="true"
        android:typeface="serif"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/tunaCheck"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

</RelativeLayout>
