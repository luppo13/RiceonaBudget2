<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="exosphere.alexandra.riceonabudget.Stirfry"
    android:background="@drawable/lalala"
    >

    <TextView android:text="Stir Fry" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="#fffbfbfb"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/chickenCheck"
        android:layout_alignEnd="@+id/chickenCheck"
        android:layout_marginRight="53dp"
        android:layout_marginEnd="53dp"
        android:textStyle="bold" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chicken and Asparagus Stir Fry"
        android:id="@+id/chickenCheck"
        android:checked="false"
        android:textSize="30sp"
        android:textColor="#fffbfbfb"
        android:layout_marginTop="106dp"
        android:layout_marginLeft="113dp"
        android:layout_marginStart="113dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:typeface="serif" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beef and Veggie Stir Fry"
        android:id="@+id/beefVegCheck"
        android:checked="false"
        android:textSize="30sp"
        android:textColor="#fffbfbfb"
        android:layout_marginTop="26dp"
        android:typeface="serif"
        android:layout_below="@+id/chickenCheck"
        android:layout_alignLeft="@+id/chickenCheck"
        android:layout_alignStart="@+id/chickenCheck" />

</RelativeLayout>
