<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="exosphere.alexandra.riceonabudget.PumpkinRice"
    android:id="@+id/PumpkinRice"
    android:transitionGroup="false"
    android:background="#ffe4eff1">

    <TextView android:text="Pumpkin Rice" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Pumpkintitle"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@mipmap/pumpkinpan"
        android:nestedScrollingEnabled="false"
        android:maxHeight="@dimen/abc_action_button_min_height_material"
        android:layout_gravity="top|right"
        android:maxWidth="@dimen/abc_button_inset_horizontal_material"
        android:layout_below="@+id/Pumpkintitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/Pumpkintitle"
        android:layout_toEndOf="@+id/Pumpkintitle" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Butternut squash"
        android:id="@+id/checkBox4"
        android:checked="false"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Onion"
        android:id="@+id/checkBox17"
        android:checked="false"
        android:layout_below="@+id/checkBox4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 Tbsp Cumin"
        android:id="@+id/checkBox18"
        android:checked="false"
        android:layout_below="@+id/checkBox17"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/4 cup of oil"
        android:id="@+id/checkBox19"
        android:checked="false"
        android:layout_below="@+id/checkBox18"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recipe"
        android:id="@+id/textView11"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prepare an oven pan with two cups of rice. Set the oven to 425 degrees. Cut the butternut squash* into small pieces and add to the rice. Cut a whole onion and spread across the rice, add salt and 2 tbsp of cumin to the rice. Add 4 cups of water and add oil at the end. Cover with aluminon foil and bake in oven for 30-40 minutes. *Butternut squash can be substituted with pumpkin or other squash."
        android:id="@+id/textView12"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingredients"
        android:id="@+id/textView10"
        android:layout_below="@+id/Pumpkintitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pumpkinBar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
