<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="exosphere.alexandra.riceonabudget.Exotic"
    android:background="@drawable/looooola">

    <TextView android:text="Exotic/Adventurous" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:id="@+id/textView32"
        android:textColor="#ff160203"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="78dp"
        android:layout_marginStart="78dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geelrys"
        android:id="@+id/geelrysCheck"
        android:layout_marginTop="89dp"
        android:textSize="15sp"
        android:layout_below="@+id/textView32"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paella"
        android:id="@+id/paellaCheck"
        android:layout_marginTop="53dp"
        android:textSize="15sp"
        android:layout_below="@+id/geelrysCheck"
        android:layout_alignLeft="@+id/geelrysCheck"
        android:layout_alignStart="@+id/geelrysCheck" />

</RelativeLayout>
