<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="exosphere.alexandra.riceonabudget.Exotic"
    android:background="#ffe4eff1">

    <TextView android:text="Exotic/Adventurous" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:id="@+id/textView32" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Geelrys"
        android:id="@+id/geelrysCheck"
        android:layout_marginTop="87dp"
        android:checked="false"
        android:textSize="30sp"
        android:layout_below="@+id/textView32"
        android:layout_alignRight="@+id/textView32"
        android:layout_alignEnd="@+id/textView32" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paella"
        android:id="@+id/paellaCheck"
        android:checked="false"
        android:singleLine="false"
        android:textSize="30sp"
        android:layout_marginTop="77dp"
        android:layout_below="@+id/geelrysCheck"
        android:layout_alignRight="@+id/geelrysCheck"
        android:layout_alignEnd="@+id/geelrysCheck" />

</RelativeLayout>
